{
  "version": 2,
  "configurePresets": [
    {
      "name": "base", "hidden": true, "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "OLD_DXVK", "hidden": true,
      "cacheVariables": {
        "USE_OLD_DXVK": { "value": "ON", "type": "BOOL" }
      }
    },
    {
      "name": "NO_DXVK", "hidden": true,
      "cacheVariables": {
        "DISABLE_DXVK": { "value": "ON", "type": "BOOL" }
      }
    },
    {
      "name": "Release", "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Debug", "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    { "name": "Ninja-Release",     "inherits": [ "base", "Release" ] },
    { "name": "Ninja-Release-Old", "inherits": [ "base", "Release","OLD_DXVK" ] },
    { "name": "Ninja-Debug",       "inherits": [ "base", "Debug" ] },
    { "name": "Ninja-Debug-Old",   "inherits": [ "base", "Debug","OLD_DXVK" ] },
    { "name": "Ninja-Debug-NoDXVK", "inherits": [ "base", "Debug", "NO_DXVK" ] }
  ]
}
